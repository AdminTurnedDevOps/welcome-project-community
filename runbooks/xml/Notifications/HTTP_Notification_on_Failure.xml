<joblist>
  <job>
    <context>
      <options preserveOrder='true'>
        <option name='webhook_url'>
          <label>webhook.site webhook URL</label>
        </option>
      </options>
    </context>
    <defaultTab>nodes</defaultTab>
    <description>Please open https://webhook.site and use the webhook url on option_url option.</description>
    <executionEnabled>true</executionEnabled>
    <group>Basic Examples/Notifications</group>
    <id>502c04e7-6a2d-4150-8ec5-54b64ddb2cdd</id>
    <loglevel>INFO</loglevel>
    <name>HTTP Notification on Failure</name>
    <nodeFilterEditable>false</nodeFilterEditable>
    <notification>
      <onfailure>
        <plugin type='HttpNotification'>
          <configuration>
            <entry key='authentication' value='None' />
            <entry key='contentType' value='application/json' />
            <entry key='method' value='POST' />
            <entry key='remoteUrl' value='${option.webhook_url}' />
            <entry key='timeout' value='30000' />
          </configuration>
        </plugin>
      </onfailure>
    </notification>
    <notifyAvgDurationThreshold />
    <plugins />
    <scheduleEnabled>true</scheduleEnabled>
    <sequence keepgoing='false' strategy='node-first'>
      <command>
        <description>This is an intentional error to trigger the HTTP Notification on Failure </description>
        <exec>eco "hello world!"</exec>
      </command>
    </sequence>
    <uuid>502c04e7-6a2d-4150-8ec5-54b64ddb2cdd</uuid>
  </job>
</joblist>