<joblist>
  <job>
    <context>
      <options preserveOrder='true'>
        <option name='opt1' value='world!'>
          <label>Type any string</label>
        </option>
      </options>
    </context>
    <defaultTab>nodes</defaultTab>
    <description><![CDATA[Very basic options usage example.

More info here: https://docs.rundeck.com/docs/manual/job-options.html#job-options]]></description>
    <executionEnabled>true</executionEnabled>
    <group>Basic Examples/Options and Data Passing</group>
    <id>d8323d5b-4344-411c-822d-57688e207648</id>
    <loglevel>INFO</loglevel>
    <name>Basic Options Usage</name>
    <nodeFilterEditable>false</nodeFilterEditable>
    <plugins />
    <scheduleEnabled>true</scheduleEnabled>
    <sequence keepgoing='false' strategy='node-first'>
      <command>
        <description>This is the way of use options on command steps</description>
        <exec>echo "hello ${option.opt1}"</exec>
      </command>
      <command>
        <description>This is the way of use options on inline-script steps</description>
        <fileExtension>.sh</fileExtension>
        <script><![CDATA[#!/bin/bash

echo "hello @option.opt1@"]]></script>
        <scriptargs />
        <scriptinterpreter>/bin/bash</scriptinterpreter>
      </command>
    </sequence>
    <uuid>d8323d5b-4344-411c-822d-57688e207648</uuid>
  </job>
</joblist>